{
    "name": "bradietilley/laravel-actions",
    "description": "Action class framework for Laravel",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "BradieTilley\\Actionables\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Bradie Tilley",
            "homepage": "https://github.com/bradietilley"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "illuminate/bus": "^10.0",
        "illuminate/container": "^10.0",
        "illuminate/support": "^10.0"
    },
    "require-dev": {
        "symfony/var-dumper": "^6.1.5",
        "laravel/pint": "^1.0",
        "pestphp/pest": "^2.0",
        "phpstan/phpstan": "^1.8",
        "orchestra/testbench": "^8.21"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "BradieTilley\\Actionables\\Laravel\\ActionServiceProvider"
            ]
        }
    }
}